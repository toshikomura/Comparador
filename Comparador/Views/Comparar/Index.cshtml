@{
    ViewBag.Title = "Comparar";
}

@model Comparador.ViewModel.CompararViewModel

    <form method="post">
        <div class="jumbotron">
            <h1>Comparar</h1>
        </div>

        <div class="row">
            <div class="col-md-4">
                @Html.DropDownListFor(x => Model.SelectedProduto1, new SelectList(Model.Produtos, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "ID" })
            </div>
            <div class="col-md-4">
                @Html.DropDownListFor(x => Model.SelectedProduto2, new SelectList(Model.Produtos, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "ID" })
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-success center-block" onclick="@("window.location.href='" + @Url.Action("Mostrar", "Comparar") + "'");">Comparar</button>
            </div>
        </div>
             
        <hr />

        <div class="row">
            <div class="col-md-6">
                @if (Model.SelectedProduto1 > 0)
                {
                    @Html.Action("Detalhe", "Produto", new { id = Model.SelectedProduto1 })
                }
            </div>
            <div class="col-md-6">
                @if (Model.SelectedProduto2 > 0)
                {
                    @Html.Action("Detalhe", "Produto", new { id = Model.SelectedProduto2 })
                }
            </div>
        </div>        

    </form>